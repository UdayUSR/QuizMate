@model QuizMate.Models.tbl_question

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuizStart</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="row">
            <div class="col-lg-10 col-md-10 col-xs-10 col-sm-10" style="text-align:center">
                <div class="row">
                    <h1 style="font-family:Arial, Helvetica, sans-serif">@Html.DisplayFor(x => x.q_text)</h1>
                </div>
                <br />
                <br />
                <div class="row">
                    <h5>@Html.RadioButtonFor(x => x.QA, Model.q_id) @Model.QA</h5>
                </div>
                <div class="row">
                    <h5>@Html.RadioButtonFor(x => x.QB, Model.q_id) @Model.QB</h5>
                </div>
                <div class="row">
                    <h5>@Html.RadioButtonFor(x => x.QC, Model.q_id) @Model.QC</h5>
                </div>
                <div class="row">
                    <h5>@Html.RadioButtonFor(x => x.QD, Model.q_id) @Model.QD</h5>
                </div>
                <div class="row" style="display:none">
                    @Html.TextBoxFor(x=>x.QCorrectAns)
                 </div>
                <div class="room">
                    <input type="submit" value="submit" class="btn btn-success" />
                </div>

            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
